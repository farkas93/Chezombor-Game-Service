{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false
  },
  "include": [
    "server.ts",
    "src/**/*.ts" 
  ],
  "exclude": ["node_modules"] // Ensure node_modules is excluded, inherited from base but good to be explicit
}